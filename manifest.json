{
    "manifest_version": 2,
    "name": "Facebook AdBlock for your Timeline",
    "description": "Hide ads from Facebook on your timeline",
    "version": "0.0.2",
    "default_locale": "en",
    "browser_action": {
        "default_icon": "assets/icon_19.png",
        "default_popup": "src/popup.html"
    },
    "icons": {
        "19": "assets/icon_19.png",
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png",
        "disabled": "assets/icon_disabled.png"
    },
    "content_scripts": [
        {
            "exclude_globs": [],
            "include_globs": [
                "*"
            ],
            "js": [
                "dist/index.js"
            ],
            "matches": [
                "http://www.facebook.com/*",
                "http://facebook.com/*",
                "https://facebook.com/*",
                "https://www.facebook.com/*"
            ]
        }
    ]
}